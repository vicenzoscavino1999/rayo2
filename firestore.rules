rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Rate limits collection - stores last action timestamps per user
    match /rateLimits/{userId}/{action}/{doc} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId);
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && isOwner(userId);
      allow delete: if false; // Users cannot be deleted
      
      // Notifications subcollection
      match /notifications/{notificationId} {
        // Only the owner can read their notifications
        allow read: if isAuthenticated() && isOwner(userId);
        // Any authenticated user can create notifications for others
        allow create: if isAuthenticated();
        // Only owner can update (mark as read)
        allow update: if isAuthenticated() && isOwner(userId);
        // Owner can delete their notifications
        allow delete: if isAuthenticated() && isOwner(userId);
      }
    }
    
    // Posts collection
    match /posts/{postId} {
      allow read: if isAuthenticated();
      // Rate limit: content validation
      allow create: if isAuthenticated() && 
        request.resource.data.authorId == request.auth.uid &&
        request.resource.data.content.size() <= 500 &&
        request.resource.data.content.size() > 0;
      allow update: if isAuthenticated() && (
        // Owner can update their post
        resource.data.authorId == request.auth.uid ||
        // Anyone can modify likes (only likes array or commentCount can change)
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'commentCount'])
      );
      allow delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && 
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.content.size() <= 280 &&
          request.resource.data.content.size() > 0;
        allow update: if false; // Comments cannot be edited
        allow delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
      }
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      allow update: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow delete: if false; // Conversations cannot be deleted
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.resource.data.content.size() <= 1000 &&
          request.resource.data.content.size() > 0;
        allow update, delete: if false;
      }
    }
  }
}
